<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        >
        <shape>
            <padding
                android:bottom="3dp"
                android:top="3dp"
                android:left="3dp"
                android:right="3dp"/>
            <corners
                android:radius="10dp" />

        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>

                <corners
                    android:radius="5dp" />

            </shape>
        </clip>
    </item>
</layer-list>